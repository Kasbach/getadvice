<div id="ticket-show" data-ticket-id="<%= @ticket.id %>">
  <% if @ticket.status == 'En attente' %>
    <div class="container ticket-response">
      <div class="content-t" style="padding-top: 160px">
        <h1>Nous recherchons un vendeur disponible pour vous aider</h1>
        <div class="loader">Loading...</div>
      </div>
      <br>
      <div style="padding-top: 100px">
        <%= link_to 'Annuler', new_ticket_path, :class => 'btn btn-primary' %>
      </div>
    </div>

  <% elsif @ticket.status == 'En cours' %>
    <div class="container ticket-response">
      <div>
        <h1><%= @ticket.user.nickname %> est en chemin</h1>
        <h4>Notre expert vient à votre rescousse</h4>
      </div>
      <div class="test2">
        <%# <img src="https://i.pinimg.com/originals/42/f8/e6/42f8e617a028ffed2a6d16c758e44d9b.jpg" width=80% alt=""> %>
      </div>
    </div>

  <% else %>
    <div class="container ticket-response">
      <div>
        <h1>Ticket terminé</h1>
        <h4>Nous espérons que notre conseiller à répondu à vos interrogations</h4>
        <div class="heart"></div>
      </div>
      <div>
        <%# <img src="https://memegenerator.net/img/instances/81923917/cheers-to-your-success.jpg" width=80% alt=""> %>
      </div>
    </div>
  <% end %>
</div>


