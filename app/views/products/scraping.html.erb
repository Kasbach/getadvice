<div class="card-img card-img-p">
  <div class="img-product">
    <img src="<%= @image %>" alt="">
    <%= link_to barcode_path do %>
      <i class="fas fa-angle-left"></i>
    <% end %>
    <a href="<%= @url %>">
      <i class="fas fa-wrench"></i>
    </a>
  </div>
</div>
<br>
<div class="container b-product">
  <div class="price-field">
    <div>
      <h2><%= @name %></h2>
      <h3><%= @brand  %></h3>
    </div>
    <div class='price'>
      <h2><%= @price %></h2>
  </div>
  </div>
  <br>
  <div>
    <button id="togg1" class="btn btn-primary">Description du produit<button>
    <div id="d1" style='display:none'>
      <div class="card">
        <p><%= @description.gsub("PLUS D'INFORMATIONS","") %></p>
      </div>
    </div>
  </div>
  <br>
  <div>
    <div>
      <p class='stars'><%= @rating %> <%= @html_doc.search('.alltricks-Product-ReviewCounter').first.text.gsub("Soyez le premier à laisser un avis","") %></p>
    </div>
      <% @html_doc.search("[@itemprop= 'review']").each do |element| %>
        <div>
          <p class="comment"><%= element.search("[@itemprop= 'author']").text %> a écrit:</p>
          <div class="card">
            <p>"<%= element.search("[@itemprop= 'description']").text %>"</p>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
    <div class="buttons-product">
        <%= link_to new_ticket_path, :class => 'btn btn-primary' do %>
          <i class="fas fa-concierge-bell"></i><span style="padding-left: 25px">Vendeur</span>
        <% end %>
    </div>
  </div>
</div>
<br>