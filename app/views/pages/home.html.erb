<div class="home-container">
  <h2 class="home-text">
    <span style="font-size:50px">Welcome</span> <br>in your store !
  </h2>
  <h2 class="home-text">
    <span style="background: white; color: #008bd2; font-size: 51px; padding: 0px 10px">AllTricks !</span>
  </h2>
  <div class="content-homepage">
    <div>
      <%= link_to new_ticket_path, :class => 'btn btn-primary' do %>
      <i class="fas fa-concierge-bell"></i><span style="padding-left: 15px">Appeler un vendeur</span>
      <% end %>
    </div>
    <div style="margin-top: 5vh" >
      <%= link_to barcode_path, :class => 'btn btn-primary' do %>
      <i class="fas fa-qrcode"></i><span style="padding-left: 15px ">Scanner un produit</span>
      <% end %>
    </div>

    <p>
      <button id="togg1">Saisir le code barre manuellement</button>
    </p>
    <div id="d1" style='display:none' class="form-card">
      <form action="/scraping?val_barcode=" method="get">
        <div>
          <input id="val_barcode" name="val_barcode" class="input-form" style="width: 60%">
          <button type="submit" class="btn btn-primary submit">Go</button>
        </div>
      </form>
    </div>
    <div>
      <a href="https://fr.surveymonkey.com/r/QZFFVSW"><i id="survey-text" class="fas fa-praying-hands"> Donnez votre avis !</i></a>
    </div>
  </div>
</div>



<div class="home-lg">
  <div class="container">
    <h2>
      Scannez le QR Code avec votre smartphone pour vous rendre sur <br> l'application mobile <span style="background: white; color: #008bd2; font-size: 33px; padding: 0px 10px; text-shadow: none">AllTricks !</span>
    </h2>
    <a rel='nofollow' href='https://www.qr-code-generator.com' border='0' style='cursor:default'></a>
    <img src='https://chart.googleapis.com/chart?cht=qr&chl=https%3A%2F%2Fwww.anphibia.com%2F&chs=180x180&choe=UTF-8&chld=L|2' alt=''>
    <div class="content-homepage-lg">
      <h2>Scannez un code barre avec l'application mobile <span style="background: white; color: #008bd2; font-size: 33px; padding: 0px 10px; text-shadow: none">AllTricks !</span></h2>
      <div class="barcodes">
        <div class="barcode">
          <%= image_tag("barcode-1.png", :alt => "rss feed", style: 'height:80%;width:auto;') %>
        </div>
        <div class="barcode">
          <%= image_tag("barcode-2.png", :alt => "rss feed", style: 'height:80%;width:auto;') %>
        </div>
        <div class="barcode">
          <%= image_tag("barcode-3.png", :alt => "rss feed", style: 'height:80%;width:auto;') %>
        </div>
      </div>
    </div>
  </div>
</div>
